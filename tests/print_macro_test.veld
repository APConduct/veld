# Test 17: Comparison expressions
io.println("--- Test 17: Comparison Results ---")
let left = 10
let right = 20
println~("{left} < {right}: {left < right}")
println~("{left} == {right}: {left == right}")
println~("{left} > {right}: {left > right}")
io.println("")

# Test 18: Long strings
io.println("--- Test 18: Long Strings ---")
let long = "This is a very long string that contains a lot of text to test how the println macro handles longer content"
println~("Long: {long}")
io.println("")

# Test 19: Special characters in variables
io.println("--- Test 19: Special Content ---")
let quoted = "with \"quotes\""
println~("String with quotes: {quoted}")
io.println("")

# Test 20: Whitespace in interpolation
io.println("--- Test 20: Whitespace Handling ---")
let spaced = "value"
println~("Tight{spaced}fit")
