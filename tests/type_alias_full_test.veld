# Comprehensive test for the 'type' keyword
import std.io

# 1. Simple type aliases for primitives
type UserId = i32
type UserName = str
type Score = f64

# 2. Plex type aliases (structural types)
type Person = { name: str, age: i32 }
type Point2D = { x: f64, y: f64 }
type Point3D = { x: f64, y: f64, z: f64 }

# 3. Union type aliases
type IntOrString = i32 | str
type NumberOrBool = i32 | f64 | bool

# 4. Generic type aliases
type Pair<T> = { first: T, second: T }
type Box<T> = { value: T }
type Triple<T> = { a: T, b: T, c: T }

# 5. Test using type aliases in variable declarations
let id: UserId = 42
let name: UserName = "Alice"
let score: Score = 95.5

let person: Person = { name: "Bob", age: 30 }
let point: Point2D = { x: 1.5, y: 2.5 }

# 6. Test using type aliases in function signatures
fn get_user_id(user: Person) -> UserId
    return 123
end

fn create_point(x: f64, y: f64) -> Point2D
    return { x: x, y: y }
end

fn double_score(s: Score) -> Score
    return s * 2.0
end

# 7. Test generic type usage
let pair_nums: Pair<i32> = { first: 10, second: 20 }
let pair_strs: Pair<str> = { first: "hello", second: "world" }
let boxed: Box<i32> = { value: 42 }

# 8. Test calling functions with type aliases
let uid = get_user_id(person)
let new_point = create_point(3.0, 4.0)
let doubled = double_score(score)

# 9. Print results to verify everything works
import std.io

io.println("=== Type Alias Test Results ===")
io.println("")
io.println("1. Simple type aliases:")
io.print("   UserId (i32): ")
io.println(id)
io.print("   UserName (str): ")
io.println(name)
io.print("   Score (f64): ")
io.println(score)

io.println("")
io.println("2. Plex type aliases:")
io.print("   Person.name: ")
io.println(person.name)
io.print("   Person.age: ")
io.println(person.age)
io.print("   Point2D.x: ")
io.println(point.x)
io.print("   Point2D.y: ")
io.println(point.y)

io.println("")
io.println("3. Generic type aliases:")
io.print("   Pair<i32>.first: ")
io.println(pair_nums.first)
io.print("   Pair<i32>.second: ")
io.println(pair_nums.second)
io.print("   Box<i32>.value: ")
io.println(boxed.value)

io.println("")
io.println("4. Function signatures with type aliases:")
io.print("   get_user_id(person) returned: ")
io.println(uid)
io.print("   create_point(3.0, 4.0).x: ")
io.println(new_point.x)
io.print("   double_score(95.5) returned: ")
io.println(doubled)

io.println("")
io.println("=== All type alias tests passed! ===")
