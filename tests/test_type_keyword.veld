# Simple type alias
type UserId = i32
type UserName = str

type Thing = { name: str, age: i32 } # Represents a person's name and age as a plex type
type SumThing = str | i32 | bool # Represents a sum type with a structural union type of string, integer, and boolean values

type Point = { # Represents a point in 2D space as a plex type
    x: f64,
    y: f64
}

type Size<T> = { # Represents a size in 2D space as a plex type with generic type parameter T
    width: T,
    height: T
}

