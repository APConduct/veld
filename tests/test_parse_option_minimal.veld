#| Minimal Option type to test parsing

pub enum Option<T>
    Some(T),
    None,
end

impl<T> Option<T>
    pub fn unwrap_or(self, default: T) -> T
        match self
            Option.Some(value) => value,
            Option.None => default,
        end
    end

    pub fn map<U>(self, f: (T) -> U) -> Option<U>
        match self
            Option.Some(value) => Option.Some(f(value)),
            Option.None => Option.None,
        end
    end

    pub fn is_some(self) -> bool
        match self
            Option.Some(_) => true,
            Option.None => false,
        end
    end
end
